@model List<ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Task 4 - Subkhanov Rustam</h3>
        <a href="/Account/Logout" class="btn btn-outline-secondary">Logout</a>
    </div>

    <!-- status messages -->
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-info">@TempData["msg"]</div>
    }

    <form asp-action="Block" method="post">
        <input type="hidden" name="selectAll" id="selectAllInput" value="false" />
        <div class="btn-toolbar mb-3 gap-2">

            <button type="submit"
                    formaction="/Users/Block"
                    class="btn btn-danger"
                    title="Block selected users">
                Block
            </button>

            <button type="submit"
                    formaction="/Users/Unblock"
                    class="btn btn-outline-success"
                    title="Unblock selected users">
                <img src="/images/unblock.ico" style="height:18px;" />
            </button>

            <button type="submit"
                    formaction="/Users/Delete"
                    class="btn btn-outline-danger"
                    title="Delete selected users">
                <img src="/images/delete.ico" style="height:18px;" />
            </button>

            <button type="submit"
                    formaction="/Users/DeleteUnverified"
                    class="btn btn-outline-secondary"
                    title="Delete all unverified users">
                <img src="/images/clean.ico" style="height:18px;" />
            </button>

        </div>

        <!-- TABLE -->
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:40px;">
                        <input type="checkbox" id="selectAll" />
                    </th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Last login</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="userIds" value="@u.Id" class="user-checkbox" />
                        </td>
                        <td>@u.Name</td>
                        <td>@u.Email</td>
                        <td>
                            @if (u.Status == UserStatus.Active)
                            {
                                <span class="text-success">Active</span>
                            }
                            else if (u.Status == UserStatus.Blocked)
                            {
                                <span class="text-danger">Blocked</span>
                            }
                            else
                            {
                                <span class="text-warning">Unverified</span>
                            }
                        </td>
                        <td>@u.LastLoginTime</td>
                    </tr>
                }
            </tbody>
        </table>

    </form>
    <div class="d-flex justify-content-center align-items-center gap-2 mt-3">

        <!-- PREV -->
        <a class="btn btn-outline-secondary @(ViewBag.Page <= 1 ? "disabled" : "")"
           href="/Users/Index?page=@(ViewBag.Page - 1)">
            &lt;
        </a>

        <!-- INPUT PAGE -->
        <form method="get" action="/Users/Index" class="d-flex align-items-center gap-2">
            <input type="number"
                   name="page"
                   value="@ViewBag.Page"
                   min="1"
                   max="@ViewBag.TotalPages"
                   class="form-control text-center"
                   style="width:80px;" />

            <button class="btn btn-outline-primary">Go</button>
        </form>

        <!-- NEXT -->
        <a class="btn btn-outline-secondary @(ViewBag.Page >= ViewBag.TotalPages ? "disabled" : "")"
           href="/Users/Index?page=@(ViewBag.Page + 1)">
            &gt;
        </a>

    </div>
</div>

<script>
    document.getElementById("selectAll").addEventListener("change", function () {

        let checked = this.checked;
        document.querySelectorAll(".user-checkbox").forEach(cb => {
            cb.checked = checked;
        });
        document.getElementById("selectAllInput").value = checked ? "true" : "false";
    });
</script>